{
  "manifest_version": 3,
  "name": "Your Extension Name",
  "version": "1.0",
  "description": "A description of your extension.",
  "permissions": [
    "tabs",
    "*",
    "scripting",
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": ""

  },
  "content_scripts": [
    {
      "matches": [ "https://*/*", "file:///*", "http://*/*" ],
      "js": [ "content.js" ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "injected.js","record.js" ],
      "matches": [ "https://*/*", "file:///*", "http://*/*" ]
    }
  ]
}
  